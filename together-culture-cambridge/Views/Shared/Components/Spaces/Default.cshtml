<div class="space-list-section py-2 my-5">
    <div class="search-section">
        <div class="search-box">
            <img src="~/icons/search-icon.svg"
                 alt="search for spaces"
                 class="search-icon "
            />
            <input
                class="base-input"
                id="spaceSearch"
                type="text"
                placeholder="Search for spaces"/>
        </div>
    </div>

    <div class="loading-section  py-5 align-items-center justify-content-center">
        <div class="spinner alt-spinner mr-2"></div>
        <span>Loading spaces....</span>
    </div>

    <div class="load-error-section error-section align-items-center justify-content-center py-5 d-none">
        <img src="~/icons/icon-exclamation.svg"
             alt="error exclamation"
        />

        <span class="load-text">Error loading spaces</span>
    </div>
    <div class="space-grid data-grid py-5">

    </div>
</div>

<script src="~/js/spaces.js" async defer></script>